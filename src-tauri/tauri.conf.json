{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "OurAfrica LMS",
  "version": "0.1.0",
  "identifier": "com.ourafrica.lms",
  "build": {
    "frontendDist": "../dist/our-africa-desktop-app/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "ng serve",
    "beforeBuildCommand": "ng build"
  },
  "app": {
    "windows": [
      {
        "title": "OurAfrica LMS",
        "fullscreen": false,
        "resizable": true,
        "maximized": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "center": true,
        "focus": true,
        "width": 1600,
        "height": 900,
        "minWidth": 1600,
        "minHeight": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      }
    }
  }
}
